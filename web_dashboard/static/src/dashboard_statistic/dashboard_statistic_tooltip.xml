<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="web_dashboard.DashboardStatisticTooltip" owl="1">
    <div>
        <div t-if="help or env.debug" class="o-tooltip--string">
            <t t-esc="displayName" />
        </div>
        <p t-if="help" class="o-tooltip--help">
            <t t-esc="help"/>
        </p>
        <ul t-if="env.debug" class="o-tooltip--technical">
            <li t-if="statisticType === 'aggregate'" data-item="aggregate">
                <span class="o-tooltip--technical--title">Name: </span>
                <t t-esc="name"/>
            </li>
            <li t-if="statisticType === 'formula' and name"
                data-item="formula">
                <span class="o-tooltip--technical--title">Name: </span>
                <t t-esc="name"/>
            </li>
            <li data-item="string">
                <span class="o-tooltip--technical--title">String: </span>
                <t t-esc="displayName"/>
            </li>
            <li t-if="statisticType === 'aggregate'" data-item="field">
                <span class="o-tooltip--technical--title">Field: </span>
                <t t-esc="statistic.field"/>
            </li>
            <li t-if="statisticType === 'formula'" data-item="value" >
                <span class="o-tooltip--technical--title">Value: </span>
                <t t-esc="statistic.operation"/>
            </li>
            <li t-if="statisticType === 'aggregate' and statistic.domain"
                data-item="domain">
                <span class="o-tooltip--technical--title">Domain: </span>
                <t t-esc="statistic.domain"/>
            </li>
            <li t-if="statisticType === 'aggregate' and statistic.domainLabel"
                data-item="domain_label">
                <span class="o-tooltip--technical--title">Domain Label: </span>
                <t t-esc="statistic.domainLabel"/>
            </li>
            <li t-if="statisticType === 'aggregate' and statistic.groupOperator"
                data-item="group_operator">
                <span class="o-tooltip--technical--title">Group Operator: </span>
                <t t-esc="statistic.groupOperator"/>
            </li>
            <li data-item="formatter" t-if="formatter" >
                <span class="o-tooltip--technical--title">Widget: </span>
                <t t-esc="formatter"/>
            </li>
            <li data-item="modifiers" t-if="modifiers" >
                <span class="o-tooltip--technical--title">Modifiers: </span>
                <t t-esc="modifiers"/>
            </li>
            <li data-item="value_label" t-if="valueLabel">
                <span class="o-tooltip--technical--title">Value Label: </span>
                <t t-esc="valueLabel"/>
            </li>
            <li data-item="help" t-if="help" >
                <span class="o-tooltip--technical--title">Help: </span>
                <t t-esc="help"/>
            </li>
            <li data-item="col" t-if="col" >
                <span class="o-tooltip--technical--title">Column: </span>
                <t t-esc="col"/>
            </li>
        </ul>
    </div>
</t>

</templates>
