<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="event_sale_report_view_dashboard" model="ir.ui.view">
        <field name="name">event.sale.report.view.dashboard</field>
        <field name="model">event.sale.report</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <dashboard sample="1">
                <view type="graph" ref="event_sale.event_sale_report_view_graph"/>
                <group>
                    <aggregate name="events" string="# Events with Registrations" field="event_id"/>
                    <aggregate name="registrations" string="# Registrations" field="id" group_operator="count"
                               measure="__count__"/>
                    <aggregate name="customers" string="# Unique Customers" field="sale_order_partner_id"
                               help="Unique partners who made sale orders" clickable="False"/>
                    <aggregate name="payers" string="# Invoice addresses" field="invoice_partner_id"
                               help="Unique invoiced partners" clickable="False"/>
                    <aggregate name="sale_price_untaxed" string="Untaxed Total Revenues" field="sale_price_untaxed"
                               group_operator="sum" widget="monetary"/>
                    <aggregate name="sale_price" string="Total Revenues" field="sale_price"
                               group_operator="sum" widget="monetary"/>
                    <aggregate name="sale_price_avg" string="Avg. Amount /Registration" field="sale_price"
                               group_operator="avg" widget="monetary" clickable="False"/>
                    <aggregate name="avg_amount_sale_order" string="Avg. Amount /Order"
                               field="avg_amount_sale_order" group_operator="avg" widget="monetary" clickable="False"/>
                    <aggregate name="avg_daily_registrations" string="Avg. Registrations /Day"
                               field="avg_daily_registrations" group_operator="avg" clickable="False"/>
                    <aggregate name="avg_sold_daily_registrations" string="Avg. Registrations Sold /Day"
                               field="avg_sold_daily_registrations" group_operator="avg" clickable="False"/>
                </group>
                <view type="pivot" ref="event_sale_dashboard.event_sale_report_view_pivot"/>
            </dashboard>
        </field>
    </record>

    <record id="event_sale_report_view_pivot" model="ir.ui.view">
        <field name="name">event.sale.report.view.pivot.inherit.dashboard</field>
        <field name="model">event.sale.report</field>
        <field name="inherit_id" ref="event_sale.event_sale_report_view_pivot"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//field[last()]" position="after">
                <field name="event_type_id" type="row"/>
            </xpath>
            <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="type">col</attribute>
            </xpath>
        </field>
    </record>

    <record id="event_sale.event_sale_report_action" model="ir.actions.act_window">
        <field name="view_mode">graph,pivot,dashboard</field>
        <field name="context">{
            'search_default_priced_tickets': 1,
            'search_default_event_date_start': 1,
            'pivot_measures': ['__count__', 'sale_price_untaxed', 'sale_price'],
        }</field>
    </record>
</odoo>
