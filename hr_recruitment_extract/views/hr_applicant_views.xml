<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_recruitment_extract_view_form" model="ir.ui.view">
        <field name="name">hr.applicant.extract.view.form</field>
        <field name="model">hr.applicant</field>
        <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_manual_send_for_digitization" class="oe_highlight" string="Send For Digitization" type="object"
                attrs="{'invisible': [('extract_can_show_send_button', '=', False)]}" data-hotkey="q"/>
            </xpath>
            <xpath expr="//header" position='after'>
                <field name="extract_state" invisible="1"/>
                <field name="extract_can_show_resend_button" invisible="1"/>
                <field name="extract_can_show_send_button" invisible="1"/>
                <field name="is_first_stage" invisible="1"/>
                <div role="status" class="alert alert-danger mb8"
                     attrs="{'invisible':['|',
                            ('is_first_stage', '=', False),
                            ('extract_state', 'not in', ['not_enough_credit'])]}">
                    <button string="Buy credits" type="object" name="buy_credits" class="btn btn-sm btn-primary float-end mb0"/>
                    <button name="action_manual_send_for_digitization" class="btn btn-sm btn-primary float-end mb0 me-1" string="Resend For Digitization" type="object"
                        attrs="{'invisible': [('extract_can_show_resend_button', '=', False)]}" data-hotkey="q"/>
                    You don't have enough credit to extract data from your CV.
                    <div class="clearfix"/>
                </div>
                <div role="status" class="alert alert-info mb8"
                     attrs="{'invisible':['|',
                            ('is_first_stage', '=', False),
                            ('extract_state', 'not in', ['waiting_upload', 'waiting_extraction'])]}">
                    <button string="Update status" type="object" name="check_ocr_status" class="btn btn-sm btn-primary float-end mb0"/>
                    The file has been sent and is being processed. It usually takes between 5 and 10 seconds.
                    <div class="clearfix"/>
                </div>
                <field name="extract_status_code" invisible="1"/>
                <div role="status" class="alert alert-info mb8"
                     attrs="{'invisible':['|',
                            ('is_first_stage', '=', False),
                            ('extract_state', 'not in', ['extract_not_ready'])]}">
                    <button string="Update status" type="object" name="check_ocr_status" class="btn btn-sm btn-primary float-end mb0"/>
                    The data extraction is not finished yet. The extraction usually takes between 5 and 10 seconds.
                    <div class="clearfix"/>
                </div>
                <div role="status" class="alert alert-danger mb8"
                     attrs="{'invisible':['|', '|',
                            ('is_first_stage', '=', False),
                            ('extract_state', 'not in', ['error_status']),
                            '&amp;',
                            ('extract_status_code', '&gt;', 99),
                            ('extract_status_code', '&lt;', 200)]}">
                    <button name="action_manual_send_for_digitization" class="btn btn-sm btn-primary float-end mb0 me-1"
                            string="Resend For Digitalization" type="object" data-hotkey="q"/>
                    <field name="extract_error_message" class="oe_inline"/>
                    <div class="clearfix"/>
                </div>
                <div role="status" class="alert alert-warning mb8"
                     attrs="{'invisible':['|', '|', '|',
                            ('is_first_stage', '=', False),
                            ('extract_state', 'not in', ['error_status', 'waiting_validation']),
                            ('extract_status_code', '&lt;', 100),
                            ('extract_status_code', '&gt;', 199)]}">
                    <field name="extract_error_message"/>
                </div>
            </xpath>
            <xpath expr="//field[@name='department_id']" position='after'>
                <field name="extract_remote_id" groups="base.group_no_one"/>
            </xpath>
        </field>
    </record>

    <record id="hr_recruitment_extract_view_list" model="ir.ui.view">
        <field name="name">hr.applicant.extract.view.list</field>
        <field name="model">hr.applicant</field>
        <field name="inherit_id" ref="hr_recruitment.crm_case_tree_view_job"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-muted">state_processed</attribute>
            </xpath>
            <xpath expr="//tree" position="inside">
                <field name="state_processed" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
