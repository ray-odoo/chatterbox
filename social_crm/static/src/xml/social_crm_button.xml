<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-extend="social.StreamPostComment">
        <t t-jquery=".dropdown-menu" t-operation="prepend">
            <a t-if="widget.isCommentConvertibleToLead(comment)" class="o_social_generate_lead_comment dropdown-item text-decoration-none" href="#">Create Lead</a>
        </t>
    </t>
    <t t-extend="social.StreamPostCommentsOriginalPost">
        <t t-jquery=".o_social_post_published_date" t-operation="after">
            <div t-attf-class="o_social_icon_dropdown o_social_manage_post dropdown #{widget.isPostConvertibleToLead(widget.originalPost) ? '' : 'd-none'}">
                <button
                    t-attf-class="btn bg-white dropdown-toggle #{bubble_design ? 'bg-200 px-3 rounded-pill' : ''}"
                    type="button"
                    t-attf-id="post_actions_0"
                    data-bs-toggle="dropdown"
                    aria-haspopup="true"
                    aria-expanded="false">
                    <i class="fa fa-ellipsis-v"/>
                </button>
                <div class="dropdown-menu dropdown-menu-end" t-attf-aria-labelledby="post_actions_0">
                    <a class="o_social_generate_lead_post dropdown-item text-decoration-none" href="#">Create Lead</a>
                </div>
            </div>
        </t>
    </t>
</templates>
