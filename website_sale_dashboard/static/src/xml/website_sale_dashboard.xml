<?xml version="1.0" encoding="UTF-8"?>
<templates>

    <!-- Hide the big buttons related to the website sales orders -->
    <t t-extend="website.dashboard_header">
        <t t-jquery="div.o_dashboard_common" t-operation="replace"/>
    </t>
    <!-- Remove the 'community' Sales Dashboard, keeping only the Plausible and GAnalytics dashboards -->
    <t t-extend="website_sale.dashboard_content">
        <t t-jquery="div.o_dashboard_sales" t-operation="replace"/>
    </t>

    <t t-name="website_sale_dashboard.WebsiteSaleDashboardView"
        t-inherit="web_dashboard.DashboardView"
        t-inherit-mode="primary"
        owl="1">
        <xpath expr="//Layout" position="inside">
            <t t-set-slot="layout-buttons">
                <a role="button" href="/" class="btn btn-primary" title="Go to Website">
                    Go to Website
                </a>
            </t>
        </xpath>
    </t>

</templates>
