<?xml version="1.0"?>
<odoo>
    <record id="homeworking_location_view_tree" model="ir.ui.view">
        <field name="name">homeworking.location.view.tree</field>
        <field name="model">homeworking.location</field>
        <field name="arch" type="xml">
            <tree string="Homeworking Locations"
                    editable="bottom"
                    delete="1">
                <field name="name"/>
                <field name="location_type"/>
                <field name="color" widget="color_picker"/>
            </tree>
        </field>
    </record>

    <record id="homeworking_location_action_tree" model="ir.actions.act_window">
        <field name="name">Homeworking Locations</field>
        <field name="res_model">homeworking.location</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="homeworking_location_menu"
        name="Homeworking Locations"
        parent="hr.menu_config_employee"
        action="homeworking_location_action_tree"
        sequence="4"/>
</odoo>
