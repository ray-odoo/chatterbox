<?xml version="1.0"?>
<odoo>
    <record id="homeworking_schedule_view_form" model="ir.ui.view">
        <field name="name">homeworking.schedule.view.form</field>
        <field name="model">homeworking.schedule</field>
        <field name="arch" type="xml">
            <form string="Homeworking">
                <sheet>
                    <group col='4'>
                        <field name="date_start"/>
                        <field name="date_end"/>
                        <field name="monday_location_id"/>
                        <field name="tuesday_location_id"/>
                        <field name="wednesday_location_id"/>
                        <field name="thursday_location_id"/>
                        <field name="friday_location_id"/>
                        <field name="saturday_location_id"/>
                        <field name="sunday_location_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="homeworking_schedule_view_tree" model="ir.ui.view">
        <field name="name">homeworking.schedule.view.tree</field>
        <field name="model">homeworking.schedule</field>
        <field name="arch" type="xml">
            <tree string="Homeworking" editable="bottom">
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="monday_location_id"/>
                <field name="tuesday_location_id"/>
                <field name="wednesday_location_id"/>
                <field name="thursday_location_id"/>
                <field name="friday_location_id"/>
                <field name="saturday_location_id"/>
                <field name="sunday_location_id"/>
            </tree>
        </field>
    </record>
</odoo>
