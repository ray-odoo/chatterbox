<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
         <!-- Employee Settings -->
        <record id="hr.employee_admin" model="hr.employee">
            <field name="has_specific_homeworking_policy" eval="True"/>
        </record>

        <record id="hr.employee_mit" model="hr.employee">
            <field name="has_specific_homeworking_policy" eval="True"/>
        </record>

        <!-- Employee Schedules -->
        <record id="hw_admin_schedule" model="homeworking.schedule">
            <field name="employee_id" ref="hr.employee_admin"/>
            <field name="date_start" eval="(DateTime.now() + relativedelta(days=0)).strftime('%Y-%m-%d')"/>
            <field name="date_end" eval="(DateTime.now() + relativedelta(days=31, months=2)).strftime('%Y-%m-%d')"/>
            <field name="monday_location_id" ref="homeworking_location_home"/>
            <field name="tuesday_location_id" ref="homeworking_location_office"/>
            <field name="wednesday_location_id" ref="homeworking_location_unspecified"/>
            <field name="thursday_location_id" ref="homeworking_location_office"/>
            <field name="friday_location_id" ref="homeworking_location_home"/>
            <field name="saturday_location_id" ref="homeworking_location_unspecified"/>
            <field name="sunday_location_id" ref="homeworking_location_unspecified"/>
        </record>

        <record id="hw_mit_schedule" model="homeworking.schedule">
            <field name="employee_id" ref="hr.employee_mit"/>
            <field name="date_start" eval="(DateTime.now() + relativedelta(days=0)).strftime('%Y-%m-%d')"/>
            <field name="date_end" eval="(DateTime.now() + relativedelta(days=31)).strftime('%Y-%m-%d')"/>
            <field name="monday_location_id" ref="homeworking_location_home"/>
            <field name="tuesday_location_id" ref="homeworking_location_home"/>
            <field name="wednesday_location_id" ref="homeworking_location_office"/>
            <field name="thursday_location_id" ref="homeworking_location_office"/>
            <field name="friday_location_id" ref="homeworking_location_unspecified"/>
            <field name="saturday_location_id" ref="homeworking_location_unspecified"/>
            <field name="sunday_location_id" ref="homeworking_location_unspecified"/>
        </record>

        <!-- Department Schedules -->
        <record id="hw_dep_rd_schedule" model="homeworking.schedule">
            <field name="department_id" ref="hr.dep_rd"/>
            <field name="date_start" eval="(DateTime.now() + relativedelta(days=0)).strftime('%Y-%m-%d')"/>
            <field name="date_end" eval="(DateTime.now() + relativedelta(days=31, months=3)).strftime('%Y-%m-%d')"/>
            <field name="monday_location_id" ref="homeworking_location_home"/>
            <field name="tuesday_location_id" ref="homeworking_location_home"/>
            <field name="wednesday_location_id" ref="homeworking_location_home"/>
            <field name="thursday_location_id" ref="homeworking_location_office"/>
            <field name="friday_location_id" ref="homeworking_location_unspecified"/>
            <field name="saturday_location_id" ref="homeworking_location_unspecified"/>
            <field name="sunday_location_id" ref="homeworking_location_unspecified"/>
        </record>
    </data>
</odoo>
