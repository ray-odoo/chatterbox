<odoo>
    <record id="change_homeworking_location_wizard_view_form" model="ir.ui.view">
        <field name="name">change.homeworking.location.wizard.view.form</field>
        <field name="model">change.homeworking.location.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Change Location">
                <sheet>
                    <field name='has_specific_homeworking_policy' invisible="1"/>
                    <field name='user_id' invisible="1"/>
                    <field name='is_hr_user' invisible="1"/>
                    <group>
                        <field name="employee_id" readonly="1"/>
                        <field name="date" readonly="1"/>
                        <field name="homeworking_location_id" attrs="{'readonly': &quot;[('is_hr_user', '=', False), ('user_id', '!=', uid)]&quot;}"/>
                    </group>
                    <span attrs="{'invisible': &quot;[('is_hr_user', '=', False), ('user_id', '!=', uid)]&quot;}">
                        Change this location as an exception to the homeworking schedule for this date only or change it
                        permanently for this weekday in the homeworking schedule from this date onwards:
                        <footer attrs="{'invisible': &quot;[('is_hr_user', '=', False), ('user_id', '!=', uid)]&quot;}">
                            <button name="change_work_entry_location" string="Confirm exception" type="object"
                                    class="btn btn-primary" data-hotkey="q"/>
                            <button name="change_employee_schedule_location"
                                    attrs="{'invisible': [('has_specific_homeworking_policy', '=', False)]}"
                                    string="Change homeworking schedule"
                                    type="object" class="btn btn-secondary"
                                    data-hotkey="w"/>
                            <button name="change_department_schedule"
                                    attrs="{'invisible': [('has_specific_homeworking_policy', '=', True)]}"
                                    string="Change homeworking schedule"
                                    type="object" class="btn btn-secondary"
                                    confirm="This employee follows their department homeworking policy. Changing their schedule will automatically make them unfollow the department schedule and create a new personal schedule instead. Are you sure you want to proceed?"
                                    data-hotkey="w"/>
                            <button string="Discard" special="cancel" class="btn-secondary" data-hotkey="z"/>
                        </footer>
                    </span>
                </sheet>
           </form>
        </field>
    </record>
</odoo>
