<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <record id="homeworking_schedule_base" model="ir.rule">
        <field name="name">Homeworking Schedules: Only Self</field>
        <field name="model_id" ref="model_homeworking_schedule"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_unlink" eval="1"/>
        <field name="perm_read" eval="0"/>
    </record>

    <record id="homeworking_schedule_hr" model="ir.rule">
        <field name="name">Homeworking Schedules: HR</field>
        <field name="model_id" ref="model_homeworking_schedule"/>
        <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_unlink" eval="1"/>
        <field name="perm_read" eval="0"/>
    </record>

    <record id="homeworking_schedule_multi_company" model="ir.rule">
        <field name="name">Homeworking Schedule multi company rule</field>
        <field name="model_id" ref="model_homeworking_schedule"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>

    <record id="hr_user_homeworking_entry_base_write" model="ir.rule">
        <field name="name">Writing Homeworking entries: Only Self</field>
        <field name="model_id" ref="model_homeworking_entry"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
        <field name="perm_write" eval="1"/>
        <field name="perm_read" eval="0"/>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="hr_user_homeworking_entry_hr" model="ir.rule">
        <field name="name">Homeworking entries: HR</field>
        <field name="model_id" ref="model_homeworking_entry"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
    </record>

    <record id="hr_homeworking_entry_rule_multi_company" model="ir.rule">
        <field name="name">Homeworking entry multi company rule</field>
        <field name="model_id" ref="model_homeworking_entry"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
</odoo>
